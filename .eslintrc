{
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2017
  },
  "env": {
    "es6": true,
    "node": true,
    "browser": true,
    "mocha": true
  },
  "rules": {
    "no-unused-vars": ["error", {"varsIgnorePattern": "React|createElement"}],
    "react/jsx-key": "off",
    "react/prop-types": "off",
    "react/display-name": "off",
    "indent": ["error", 2],
    "prefer-template":  "error",
    "max-len": ["error", 300, 2],
    "object-curly-spacing": ["error", "always"],
    "quotes": ["error", "single"],
    "no-extra-boolean-cast": "off",
    "react/no-unescaped-entities": "off"
  },
  "globals": {
    "__dirname": "readonly"
  }
}
